<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background">
    <ImageView
        android:src="@drawable/dart"
        android:layout_width="270dp"
        android:layout_height="270dp"
        android:layout_margin="5dp"
        android:layout_gravity="center_horizontal"
        />
    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="next"
        android:id="@+id/next"
        />

    <!--유저 이미지 테스트-->
    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
    <TableRow>
        <ImageView
            android:id="@+id/playerNo1"
            android:src="@drawable/c1"
            android:layout_width="70dp"
            android:layout_height="120dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            />
        <ImageView
            android:id="@+id/playerNo2"
            android:src="@drawable/c1"
            android:layout_width="70dp"
            android:layout_height="120dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            />
        <ImageView
            android:id="@+id/playerNo3"
            android:src="@drawable/c1"
            android:layout_width="70dp"
            android:layout_height="120dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            />
        <ImageView
            android:id="@+id/playerNo4"
            android:src="@drawable/c1"
            android:layout_width="70dp"
            android:layout_height="120dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            />
    </TableRow>


    <TableRow>
        <TextView
            android:id="@+id/u1_play_topScore"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#ffc0cb"
            android:gravity="center"
            android:inputType="numberSigned"
            android:text="000"
            android:textColor="#ff0000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/u2_play_topScore"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#ffc0cb"
            android:gravity="center"
            android:inputType="numberSigned"
            android:text="000"
            android:textColor="#ff0000"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/u3_play_topScore"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:background="#ffc0cb"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:inputType="numberSigned"
            android:text="000"
            android:textColor="#ff0000"
            android:textSize="20dp"
            />
        <TextView
            android:id="@+id/u4_play_topScore"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:background="#ffc0cb"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:inputType="numberSigned"
            android:text="000"
            android:textColor="#ff0000"
            android:textSize="20dp"
            />
    </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/u1_play_totalScore"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#ffc0cb"
                android:gravity="center"
                android:inputType="numberSigned"
                android:text="000"
                android:textColor="#ffff00"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/u2_play_totalScore"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#ffc0cb"
                android:gravity="center"
                android:inputType="numberSigned"
                android:text="000"
                android:textColor="#ffff00"
                android:textSize="20dp" />
            <TextView
                android:id="@+id/u3_play_totalScore"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:background="#ffc0cb"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:inputType="numberSigned"
                android:text="000"
                android:textColor="#ffff00"
                android:textSize="20dp"
                />
            <TextView
                android:id="@+id/u4_play_totalScore"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:background="#ffc0cb"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:inputType="numberSigned"
                android:text="000"
                android:textColor="#ffff00"
                android:textSize="20dp"
                />
        </TableRow>
    </TableLayout>

</LinearLayout>